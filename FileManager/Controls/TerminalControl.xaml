<UserControl x:Class="FileManager.Controls.TerminalControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FileManager.Controls"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Terminal Header -->
        <Border Grid.Row="0" Background="#FF2D2D2D" Padding="5">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Terminal" Foreground="White" VerticalAlignment="Center"/>
                <Button x:Name="CloseButton" Content="Ã—" 
                        Style="{StaticResource MaterialDesignFlatButton}"
                        Foreground="White"
                        Margin="5,0,0,0"
                        Padding="5,0"
                        Click="CloseButton_Click"/>
            </StackPanel>
        </Border>
        
        <!-- Terminal Content -->
        <Grid Grid.Row="1" Background="#FF1E1E1E">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Output Area -->
            <ScrollViewer x:Name="OutputScrollViewer" 
                         VerticalScrollBarVisibility="Auto"
                         HorizontalScrollBarVisibility="Auto">
                <TextBlock x:Name="OutputTextBlock" 
                          FontFamily="Consolas"
                          Foreground="#FFCCCCCC"
                          TextWrapping="Wrap"
                          Margin="5"/>
            </ScrollViewer>
            
            <!-- Input Area -->
            <Grid Grid.Row="1" Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Text="$" 
                          Foreground="#FFCCCCCC"
                          FontFamily="Consolas"
                          VerticalAlignment="Center"
                          Margin="0,0,5,0"/>
                
                <TextBox x:Name="InputTextBox"
                         Grid.Column="1"
                         Background="Transparent"
                         Foreground="#FFCCCCCC"
                         FontFamily="Consolas"
                         BorderThickness="0"
                         Padding="0"
                         KeyDown="InputTextBox_KeyDown"/>
            </Grid>
        </Grid>
    </Grid>
</UserControl> 